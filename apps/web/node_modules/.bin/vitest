#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/vitest@4.0.16_@types+node@20.19.27_@vitest+ui@4.0.16_jiti@2.6.1_jsdom@27.3.0_lightningcss@1.30.2_tsx@4.21.0_yaml@2.8.2/node_modules/vitest/node_modules:/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/vitest@4.0.16_@types+node@20.19.27_@vitest+ui@4.0.16_jiti@2.6.1_jsdom@27.3.0_lightningcss@1.30.2_tsx@4.21.0_yaml@2.8.2/node_modules:/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/vitest@4.0.16_@types+node@20.19.27_@vitest+ui@4.0.16_jiti@2.6.1_jsdom@27.3.0_lightningcss@1.30.2_tsx@4.21.0_yaml@2.8.2/node_modules/vitest/node_modules:/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/vitest@4.0.16_@types+node@20.19.27_@vitest+ui@4.0.16_jiti@2.6.1_jsdom@27.3.0_lightningcss@1.30.2_tsx@4.21.0_yaml@2.8.2/node_modules:/Users/MROCHLIN/gc-git/2025-winter-claude-playground/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../vitest/vitest.mjs" "$@"
else
  exec node  "$basedir/../vitest/vitest.mjs" "$@"
fi
